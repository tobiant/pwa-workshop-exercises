<mvc:View
        controllerName="advanced.pwa.controller.Home"
        displayBlock="true"
        xmlns="sap.m"
        xmlns:mvc="sap.ui.core.mvc">
    <Page
            id="page"
            title="{i18n>title}">
        <content>
            <VBox justifyContent="Center" alignItems="Center" alignContent="SpaceAround">
                <Image src="../assets/icons/android-chrome-512x512.png" width="100%"/>
                <Button text="{i18n>btn}" press="onPress"/>
            </VBox>
        </content>
    </Page>
</mvc:View>
